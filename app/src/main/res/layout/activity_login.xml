<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.LoginActivity">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z"
                android:textSize="50sp"
                android:textColor="#D4006E"
                android:shadowColor="#7B03F4"
                android:shadowRadius="3.0"
                android:shadowDx="10"
                android:shadowDy="10" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y"
                android:textSize="45sp"
                android:textColor="#9B00D4"
                android:shadowColor="#0337F4"
                android:shadowRadius="3.0"
                android:shadowDx="10"
                android:shadowDy="10" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="40sp"
                android:textColor="#0091D4"
                android:shadowColor="#F4CC03"
                android:shadowRadius="3.0"
                android:shadowDx="10"
                android:shadowDy="10" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="35sp"
                android:textColor="#20D400"
                android:shadowColor="#0353F4"
                android:shadowRadius="3.0"
                android:shadowDx="10"
                android:shadowDy="10" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30sp"
                android:textColor="#FF5722"
                android:shadowColor="#00BCD4"
                android:shadowRadius="3.0"
                android:shadowDx="10"
                android:shadowDy="10" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="25sp"
                android:textColor="#D4BF00"
                android:shadowColor="#673AB7"
                android:shadowRadius="3.0"
                android:shadowDx="10"
                android:shadowDy="10" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:hint="请输入账号"
            app:hintTextColor="#03A9F4"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/username"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:hint="请输入密码"
            app:passwordToggleEnabled="true"
            app:hintTextColor="#03A9F4"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/login"
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/enroll"
            android:text="注册"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>